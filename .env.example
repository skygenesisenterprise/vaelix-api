# =======================================
# VBG Backend API - Environment Example
# =======================================

# -----------------------
# Server configuration
# -----------------------
PORT=4000
HOST=0.0.0.0

# -----------------------
# Database configuration (PostgreSQL example)
# -----------------------
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vbg_ledger
DB_USER=vbg_user
DB_PASSWORD=your_secure_password
DB_SSL=false

# -----------------------
# OpenPayd API credentials
# -----------------------
OPENPAYD_CLIENT_ID=your_sandbox_client_id
OPENPAYD_CLIENT_SECRET=your_sandbox_client_secret
OPENPAYD_ENVIRONMENT=sandbox   # 'sandbox' or 'production'

# -----------------------
# JWT / API Token for internal SDK / frontend
# -----------------------
API_JWT_SECRET=your_super_secret_key
API_JWT_EXPIRATION=1h

# -----------------------
# Webhook / Notifications
# -----------------------
WEBHOOK_SECRET=your_webhook_hmac_secret
WEBHOOK_URL=https://api.vaelixbank.com/webhooks/openpayd

# -----------------------
# Logging / Monitoring
# -----------------------
LOG_LEVEL=info    # debug | info | warn | error
SENTRY_DSN=       # optional, for error monitoring

# -----------------------
# Optional feature flags
# -----------------------
ENABLE_CARD_ISSUANCE=true
ENABLE_MULTI_CURRENCY=true
ENABLE_EXTERNAL_PAYMENTS=true